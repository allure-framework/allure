<h2 class="pane__title {{b "defects-list" "title" status=status}}">
    xUnit results
</h2>
<table class="{{b "table" hover=true}}">
    <thead>
    <tr>
        <th>Title</th>
        <th>Duration</th>
        <th>Failed</th>
        <th>Broken</th>
        <th>Cancelled</th>
        <th>Pending</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    <tr class="{{b "table" "row" summary=true}}" disabled>
        <td>
            Total {{suites.length}} suites
        </td>
        <td>{{time.duration}}</td>
        <td>
            {{#if statistic.failed}}
                <span class="{{b "label" status="FAILED"}}">{{statistic.failed}}</span>
            {{/if}}
        </td>
        <td>
            {{#if statistic.broken}}
                <span class="{{b "label" status="BROKEN"}}">{{statistic.broken}}</span>
            {{/if}}
        </td>
        <td>
            {{#if statistic.canceled}}
                <span class="{{b "label" status="CANCELED"}}">{{statistic.canceled}}</span>
            {{/if}}
        </td>
        <td>
            {{#if statistic.pending}}
                <span class="{{b "label" status="PENDING"}}">{{statistic.pending}}</span>
            {{/if}}
        </td>
        <td>
            {{statistic.total}}
        </td>
    </tr>
    {{#each suites}}
        <tr class="{{b "table" "row" active=(eq uid ../currentSuite)}} testsuite-list__row" data-uid="{{uid}}">
            <td class="long-line">{{title}}</td>
            <td>{{time.duration}}</td>
            <td>
                {{#if statistic.failed}}
                    <span class="{{b "label" status="FAILED"}}">{{statistic.failed}}</span>
                {{/if}}
            </td>
            <td>
                {{#if statistic.broken}}
                    <span class="{{b "label" status="BROKEN"}}">{{statistic.broken}}</span>
                {{/if}}
            </td>
            <td>
                {{#if statistic.canceled}}
                    <span class="{{b "label" status="CANCELED"}}">{{statistic.canceled}}</span>
                {{/if}}
            </td>
            <td>
                {{#if statistic.pending}}
                    <span class="{{b "label" status="PENDING"}}">{{statistic.pending}}</span>
                {{/if}}
            </td>
            <td>{{statistic.total}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
