<h2 class="pane__title">
    Defect
    <span class="pane__controls">
        <a class="fa fa-close" title="Close" href="#defects"></a>
    </span>
</h2>

<div class="alert alert_status_{{status}}">
    <pre class="alert__code"><code>{{failure.message}}</code></pre>
</div>

<table class="defect__table table table_hover">
    <thead>
    <tr>
        <th width="5%">#</th>
        <th>Title</th>
        <th class="{{b "table" "col" right=true}}">Duration</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    {{#each testCases}}
        <tr class="testcase-table__item {{b "table" "row" active=active}}" data-uid="{{uid}}">
            <td>{{inc @index}}</td>
            <td>
                {{name}}
            </td>
            <td class="{{b "table" "col" right=true}}">
                {{time.duration}}
            </td>
            <td>
                <span class="label label_status_{{status}}">{{status}}</span>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

